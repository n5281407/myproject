<mvc:View
	controllerName="xsoft.views.pages.Product"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	class="viewPadding">    
	<Page
		id="page"
		title="{Name}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" >
		<headerContent>
			<!--<Button
				icon="sap-icon://cart"
				visible="{device>/isPhone}"
				tooltip="show shoping cart"
				press="handleCartButtonPress" />-->
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://cancel"
					text="Back"
					tooltip="Go back"
					press="handleCancelButtonPress" />				
				<Button
					icon="sap-icon://accept"
					text="Update Item"
					tooltip="Update item details"
					press="handleAddButtonPress" />
				<Button
					icon="sap-icon://decline"
					text="Remove Item"
					tooltip="Remove item from showroom"
					press="handleDelButtonPress" />					
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="ID: {pid}"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="{Unit}">
				<attributes>
					<ObjectAttribute
						text="{title}" />
					<!--<ObjectAttribute
						text="{ShortDescription}" />
					<ObjectAttribute
						text="{Weight}g" />-->
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path : 'info'
						}"
						state="{
							path : 'status',
							formatter : '.formatter.statusState'
						}" />
				</firstStatus>
			</ObjectHeader>
			<VBox alignItems="Center">
				<Image
					src= "{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
					decorative="true"
					densityAware="false" />
			</VBox>
		</content>
	</Page>
</mvc:View>